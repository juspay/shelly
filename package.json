{
  "name": "@juspay/shelly",
  "version": "1.0.0",
  "description": "An intelligent CLI assistant that analyzes your command-line history to provide smart, AI-powered suggestions for failed commands. Shelly helps you debug and fix errors without leaving your terminal, boosting productivity.",
  "main": "src/main.js",
  "bin": {
    "shelly": "./src/main.js"
  },
  "scripts": {
    "start": "node src/main.js",
    "test": "node --test src/tests/*.test.js",
    "build": "tsc",
    "prepublishOnly": "npm run lint",
    "semantic-release": "semantic-release",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "cli",
    "command-line",
    "error-analysis",
    "shell",
    "bash",
    "zsh",
    "debugging",
    "ai",
    "command-correction",
    "terminal",
    "productivity",
    "typescript"
  ],
  "author": {
    "name": "Juspay Technologies",
    "email": "support@juspay.in",
    "url": "https://juspay.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/juspay/Shelly#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juspay/Shelly.git"
  },
  "bugs": {
    "url": "https://github.com/juspay/Shelly/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.0.0",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/release-notes-generator": "^12.0.0",
    "@types/node": "^24.5.2",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.0.0",
    "semantic-release": "^22.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@juspay/neurolink": "^7.40.1",
    "inquirer": "^12.9.6",
    "node-pty": "^1.0.0",
    "ps-tree": "^1.2.0"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
